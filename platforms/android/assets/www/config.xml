<?xml version='1.0' encoding='utf-8'?>

<!-- change the widget id to your id and update the version as appropriate -->
<widget id="com.entropy.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

	<!-- Edit to match the details of your app -->
    <name>Entropy</name>
    <description>
       An app that controls the AC in our appartment
    </description>
    <author email="webmaster@m10digital.com" href="http://m10digital.com">
        Michael Diez
    </author>
	<!-- END App Details -->

    <content src="index.html" />
    <access origin="*" />

	<feature name="StatusBar">
            <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    
	<!-- uses cordova plugin add org.apache.cordova.statusbar to make iOS7 statusbar look right-->
	<preference name="StatusBarOverlaysWebView" value="false" />
	<!-- edit this to the background color of your app -->
	<preference name="StatusBarBackgroundColor" value="#595b5b" />
	
	<access origin="https://192.168.0.181" />

</widget>
